<Window x:Class="img_detective.ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0">Пример изображения:</Label>
                <Image Grid.Row="1"></Image>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <ListBox>
                    <ItemsControl>
                        <CheckBox>Цветовая гистограмма</CheckBox>
                    </ItemsControl>
                    <ItemsControl>
                        <CheckBox>Расположение цвета</CheckBox>
                    </ItemsControl>
                    <ItemsControl>
                        <CheckBox>Краевая гистограмма</CheckBox>
                    </ItemsControl>
                </ListBox>
                <Button Grid.Row="1" Background="Black">
                    <TextBlock Foreground="White">Поиск</TextBlock>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
