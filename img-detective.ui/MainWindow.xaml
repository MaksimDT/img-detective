<Window x:Class="img_detective.ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" MinHeight="500" Height="500" Width="525"
        Initialized="Window_Initialized_1">
    <Window.Resources>
        <Style x:Key="ToolTipStyle" TargetType="{x:Type ToolTip}">
            <Setter Property="HorizontalOffset" Value="10"/>
            <Setter Property="VerticalOffset" Value="10"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="Gray" Offset="0.0" />
                        <GradientStop Color="#222" Offset="1.0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Yellow"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock>Выберите изображение-пример для поиска</TextBlock>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Image Source="{StaticResource ResourceKey=justkey}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#AAA" Offset="0.0" />
            <GradientStop Color="#222" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>
    <Window.BorderBrush>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="Gray" Offset="0.0" />
            <GradientStop Color="Yellow" Offset="1.0" />
        </LinearGradientBrush>
    </Window.BorderBrush>
    <Window.BorderThickness>
        <Thickness Left="2" Right="2" Top="2" Bottom="2" />
    </Window.BorderThickness>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="2"></RowDefinition>
            <RowDefinition MinHeight="300"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="80"></ColumnDefinition>
                <ColumnDefinition Width="10*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Image Grid.Column="0" Source="{StaticResource ResourceKey=ExampleNotSelectedImgSource}" HorizontalAlignment="Left">
                <Image.ToolTip>
                    <ToolTip Style="{StaticResource ResourceKey=ToolTipStyle}" />
                </Image.ToolTip>
            </Image>
            
            <Grid Grid.Column="1">
            </Grid>
        </Grid>
        <Border Grid.Row="1" BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Gray" Offset="0.0" />
                    <GradientStop Color="Yellow" Offset="1.0" />
                </LinearGradientBrush>
            </Border.BorderBrush>
        </Border>
        <ItemsControl Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" ItemsSource="{Binding Path=Images}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid HorizontalAlignment="Stretch" VerticalAlignment="Center" Rows="4" Columns="4" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding Path=Source}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>